                                <h6 class="m-0 font-weight-bold text-primary">Agregar Tarea</h6>
                            </div>
                            <div class="card-body">
                                <form action="/proyectos/<%= proyecto.url %>" method="POST" class="user">
                                    <div class="form-group">
                                        <input type="text" name="tarea" class="form-control form-control-user"
                                            id="exampleInputEmail" aria-describedby="emailHelp"
                                            placeholder="Escribe una nueva tarea para el proyecto">
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-user btn-block">
                                        Agregar
                                    </button>
                                </form>
                            </div>
                        </div><!-- Color System-->
                        <div class="row">
                            <div class="col-lg-6 mb-4">
                             
                            </div>
                           
                            
                        </div>
                    </div>
                    <div class="col-xl-7 col-lg-6 mb-4">
                        <!-- Mostrar tareas-->
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Tareas</h6>
                            </div>
                            <div class="card-body">
                                 <!-- Mostrando tareas de la base de datos -->

                                 <div class="listado-pendientes">
                                    <ul>
                                        <% if(tareas.length){ %>
                                            <% tareas.forEach(function(tarea) { %>
                                        <li class="tarea" data-tarea='<%= tarea.id %>'>
                                            <%= tarea.tarea %> 
                                            <div class="acciones">
                                                
                                                
                                                <% if(tarea.estado){ %>
                                                    <i class="far fa-check-circle completo"></i>
                                                    <%} else { %>
                                                        <i class="far fa-check-circle"></i>
                                                        
                                                            <i class="fas fa-trash"></i>
                                                        
                                                        <% } %>
                                            </div>
                                        </li>

                                        <% }); %> 

                                        <!-- validando si hay tareas o no -->
                                        <%} else { %>
                                           <p class="parrafo">Aun no has agregado una tarea</p>
                                           <% } %>
                                    </ul>
                                </div>

                            </div>

                              </div>
                               
                        

                            </div>
