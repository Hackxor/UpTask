<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Log In</title>

    <!-- Custom fonts for this template-->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Custom styles for this template-->
    <link href="/css/sb-admin-2.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/app.css" attr>

</head>

<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <img src="/img/fondoRegister.jpg" class="col-lg-6 d-none d-lg-block register-image">
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Bienvenido de nuevo!</h1>
                                    </div>

                                     <!-- Mostrando alertas  -->
                      <% if(locals.mensajes){ %>
                        <div class="alertas">
                            
                        </div>
                        <% Object.keys(locals.mensajes).forEach(function(categoria) { %>
                            <% mensajes[categoria].forEach(function(error) { %>
                            <div class="`${categoria}` alerta errors"><%= error %></div>

                            <% }); %> 
                         <% }); %> 
                     <% } %>
                     <!-- ----------- -->
                                    <form  action="/login-user" method="POST" class="user">
                                        <div class="form-group">
                                            <input name="correo" type="email" class="form-control form-control-user"
                                                id="exampleInputEmail" aria-describedby="emailHelp"
                                                placeholder="Ingresa tu correo electronico">
                                        </div>
                                        <div class="form-group">
                                            <input name="contraseña" type="password" class="form-control form-control-user"
                                                id="exampleInputPassword" placeholder="Ingresa tu contraseña">
                                        </div>
                                        <div class="form-group">
                                            <div  class="custom-control custom-checkbox small">
                                                <input onclick="mostrar()" type="checkbox" class="custom-control-input" id="customCheck" >
                                                <label class="custom-control-label" for="customCheck">Mostrar Contraseña</label>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-user btn-block">
                                            Iniciar Sesion
                                        </button>
                                     
                                        <button type="submit" class="btn btn-google btn-user btn-block">
                                            <i class="fab fa-google fa-fw"></i> Iniciar Sesion con Google
                                        </button>
                                       
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="/retrieve">Olvidaste tu contraseña?</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="/register">Crea una cuenta!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/js/sb-admin-2.min.js"></script>






</body>
    <!-- mostrar contraseña -->
    <script>
        function mostrar(){ // Si quieres le cambias el nombre xD
    passField = document.getElementById('exampleInputPassword');

    if(passField.type=== 'password') // Si la checkbox de mostrar contraseña está activada
    {
        passField.type = "text";
    }
    else // Si no está activada
    {
        passField.type = "password"
    }
}
    </script>
</html>